<%- include('partials/head.ejs') %>


<body>
    <div id="app">
        <div class="container home-container">
            <header class="c-header">
                <div class="header-city">常德<img class="city-arrow" src="https://p0.meituan.net/travelcube/45c79a92755b54adc9dc1c4682b123b3201.png">
                </div>
                <div class="header-search">
                    <img class="search-icon" src="https://p0.meituan.net/travelcube/99c29829cf1b85d5cdbc76a1bd0b7329814.png"> 请输入商家名、品类或者商圈
                </div>
                <div class="header-me">
                    <img class="operate-btn" src="https://p0.meituan.net/travelcube/641521461179df7cfb88738dd1ea11ec1031.png">
                </div>
            </header>
            <section class="app-guide">
                <div class="guide-content">
                    <img class="guide-logo" src="https://p1.meituan.net/travelcube/7264ce9c25de2e464e3acd996fe8ad362803.png">
                    <p class="guide-txt">
                        <span class="content-title">省钱利器 购物超划算</span>
                        <span class="content-desc">吃喝玩乐尽在美团</span>
                    </p>
                </div>
                <a class="guide-btn" href="/add-restaurant">添加餐馆</a>
            </section>
            <section class="c-body c-home-body">
                <aside class="home-category-list">
                    <div class="home-category-list-wrap">
                        <% categories.forEach(function(item,index){ %>
                            <div class="home-category">
                                <a href="/category/<%= item.name %>">
                                <img src="<%= item.image %>" alt="">
                                <span>
                                    <%= item.name %>
                                </span>
                            </a>
                            </div>
                            <% })%>
                    </div>
                </aside>
                <main class="home-restaurant">
                    <div class="home-restaurant-wrap">
                        <h5>全部餐馆</h5>
                        <div id="restaurants"></div>
                    </div>
                </main>
            </section>



<%- include('partials/footer.ejs') %>
